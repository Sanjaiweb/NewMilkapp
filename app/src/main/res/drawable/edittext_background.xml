<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set background color -->
    <solid android:color="@color/white" />

    <!-- Set corner radius for rounded edges -->
    <corners android:radius="8dp" />

    <!-- Set padding inside the EditText -->
    <padding
        android:left="10dp"
        android:top="8dp"
        android:right="10dp"
        android:bottom="8dp" />

    <!-- Set border/stroke color and width -->
    <stroke
        android:width="1dp"
        android:color="@color/secondaryText" /> <!-- Or use a custom border color -->
</shape>
