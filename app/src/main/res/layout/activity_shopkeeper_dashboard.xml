<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvDashboardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopkeeper Dashboard"
            android:textSize="24sp"
            android:textColor="@color/primaryColor"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp" />

        <!-- Customer Management Section -->
        <LinearLayout
            android:id="@+id/customerManagementSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDashboardTitle"
            android:orientation="vertical"
            android:background="@drawable/dashboard_card_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Management"
                android:textSize="18sp"
                android:textColor="@color/secondaryColor"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnAddCustomer"
                style="@style/DashboardButton"
                android:text="Add Customer" />

            <Button
                android:id="@+id/btnViewCustomers"
                style="@style/DashboardButton"
                android:text="View Customers" />

            <Button
                android:id="@+id/btnEditCustomer"
                style="@style/DashboardButton"
                android:text="Edit Customer" />

            <Button
                android:id="@+id/btnDeleteCustomer"
                style="@style/DashboardButton"
                android:text="Delete Customer"
                android:backgroundTint="@color/errorColor" />
        </LinearLayout>

        <!-- Delivery Management Section -->
        <LinearLayout
            android:id="@+id/deliveryManagementSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerManagementSection"
            android:orientation="vertical"
            android:background="@drawable/dashboard_card_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Management"
                android:textSize="18sp"
                android:textColor="@color/secondaryColor"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnAddDeliveryPerson"
                style="@style/DashboardButton"
                android:text="Add Delivery Person" />

            <Button
                android:id="@+id/btnViewDeliveryPersons"
                style="@style/DashboardButton"
                android:text="View Delivery Persons" />

            <Button
                android:id="@+id/btnEditDeliveryPerson"
                style="@style/DashboardButton"
                android:text="Edit Delivery Person" />

            <Button
                android:id="@+id/btnDeleteDeliveryPerson"
                style="@style/DashboardButton"
                android:text="Delete Delivery Person"
                android:backgroundTint="@color/errorColor" />
        </LinearLayout>

        <!-- Invoice and Analytics Section -->
        <LinearLayout
            android:id="@+id/invoiceAnalyticsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/deliveryManagementSection"
            android:orientation="vertical"
            android:background="@drawable/dashboard_card_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoices and Analytics"
                android:textSize="18sp"
                android:textColor="@color/secondaryColor"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnGenerateInvoices"
                style="@style/DashboardButton"
                android:text="Generate Invoices" />

            <Button
                android:id="@+id/btnViewAnalytics"
                style="@style/DashboardButton"
                android:text="View Analytics" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>
